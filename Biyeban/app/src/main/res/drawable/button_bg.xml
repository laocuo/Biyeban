<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#484d66" android:endColor="#303445"
                      android:angle="270"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#5a607e" android:endColor="#484d66"
                      android:angle="270"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
